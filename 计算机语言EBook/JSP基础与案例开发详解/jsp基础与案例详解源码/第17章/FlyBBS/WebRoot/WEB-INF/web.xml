<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

	<!-- 监听器，用于监听在线人数 -->
	<listener>
		<listener-class>org.fly.listener.OnlineListener</listener-class>
	</listener>

	<!-- 字符过滤器 -->
	<filter>
		<filter-name>encode</filter-name>
		<filter-class>org.fly.filters.EncodingFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>encode</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>



	<servlet>
		<servlet-name>ConfigServlet</servlet-name>
		<servlet-class>org.fly.servlets.ConfigServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>BbsServlet</servlet-name>
		<servlet-class>org.fly.servlets.BbsServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>BbslinkServlet</servlet-name>
		<servlet-class>org.fly.servlets.BbslinkServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>BbsnewServlet</servlet-name>
		<servlet-class>org.fly.servlets.BbsnewsServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>BoardServlet</servlet-name>
		<servlet-class>org.fly.servlets.BoardServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>BookmarkServlet</servlet-name>
		<servlet-class>org.fly.servlets.BookmarkServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ClasstypeServlet</servlet-name>
		<servlet-class>org.fly.servlets.ClasstypeServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>FriendServlet</servlet-name>
		<servlet-class>org.fly.servlets.FriendServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LogServlet</servlet-name>
		<servlet-class>org.fly.servlets.LogServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>MessageServlet</servlet-name>
		<servlet-class>org.fly.servlets.MessageServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>OnlineServlet</servlet-name>
		<servlet-class>org.fly.servlets.OnlineServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>UserServlet</servlet-name>
		<servlet-class>org.fly.servlets.UserServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>VoteServlet</servlet-name>
		<servlet-class>org.fly.servlets.VoteServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>control</servlet-name>
		<servlet-class>org.fly.servlets.Control</servlet-class>
	</servlet>
	<servlet>
		<description>退出</description>
		<display-name>退出</display-name>
		<servlet-name>SessionInvalidate</servlet-name>
		<servlet-class>
			org.fly.servlets.SessionInvalidate
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>VoteServlet</servlet-name>
		<url-pattern>/vote</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UserServlet</servlet-name>
		<url-pattern>/user</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>OnlineServlet</servlet-name>
		<url-pattern>/online</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MessageServlet</servlet-name>
		<url-pattern>/mess</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LogServlet</servlet-name>
		<url-pattern>/log</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>FriendServlet</servlet-name>
		<url-pattern>/friend</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ClasstypeServlet</servlet-name>
		<url-pattern>/class</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>BookmarkServlet</servlet-name>
		<url-pattern>/book</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>BoardServlet</servlet-name>
		<url-pattern>/board</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>BbsnewServlet</servlet-name>
		<url-pattern>/bbsnew</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>BbslinkServlet</servlet-name>
		<url-pattern>/bbslink</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>BbsServlet</servlet-name>
		<url-pattern>/bbs</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ConfigServlet</servlet-name>
		<url-pattern>/config</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>control</servlet-name>
		<url-pattern>/control</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SessionInvalidate</servlet-name>
		<url-pattern>/SessionInvalidate</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
