<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<!--过滤中文乱码 -->
	<filter>
		<filter-name>CharacterFilter</filter-name>
		<filter-class>org.njy.filter.CharacterFilter</filter-class>
		<init-param>
			<param-name>econding</param-name>
			<param-value>utf-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>CharacterFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!--过滤权限 -->
	<filter>
		<filter-name>CheckRoot</filter-name>
		<filter-class>org.njy.filter.CheckRoot</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>CheckRoot</filter-name>
		<url-pattern>/admin/*</url-pattern>
	</filter-mapping>

	<servlet>
		<servlet-name>AdminServlet</servlet-name>
		<servlet-class>org.njy.servlet.AdminServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>PhotoServlet</servlet-name>
		<servlet-class>org.njy.servlet.PhotoServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LeiBieServlet</servlet-name>
		<servlet-class>org.njy.servlet.LeiBieServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>MainServlet</servlet-name>
		<servlet-class>org.njy.servlet.MainServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SystemsServlet</servlet-name>
		<servlet-class>org.njy.servlet.SystemsServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>PinglunServlet</servlet-name>
		<servlet-class>org.njy.servlet.PinglunServlet</servlet-class>
	</servlet>





	<servlet-mapping>
		<servlet-name>AdminServlet</servlet-name>
		<url-pattern>/adminServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PhotoServlet</servlet-name>
		<url-pattern>/photo</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LeiBieServlet</servlet-name>
		<url-pattern>/leibie</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MainServlet</servlet-name>
		<url-pattern>/main</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SystemsServlet</servlet-name>
		<url-pattern>/systems</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PinglunServlet</servlet-name>
		<url-pattern>/pinglun</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
